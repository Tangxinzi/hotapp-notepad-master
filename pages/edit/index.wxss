page {
  width: 100%;
  height: 100%;
}

.container {
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.title {
  margin: 15rpx 5%;
  width: 90%;
  text-align: center;
  height: 60rpx;
  font-size: 38rpx;
  border-bottom: 1px solid #f5f5f5;
}

.row {
  flex: 1;
  display: flex;
  width: 90%;
  height: 65%;
  margin: 0 5%;
  overflow: hidden;
}

.row .text {
  flex: 1;
  width: 100%;
  height: 100%;
  font-size: 36rpx;
  color: #666;
}

.date {
  text-align: center;
  padding: 10rpx 0;
}

.bottom {
  width: 100%;
  background: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 100%;
  bottom: 0;
}

.bottom .btn {
  flex: 1;
  line-height: 2;
  padding: 10rpx 20rpx;
  margin: 30rpx 30rpx;
}

.btn.success {
  background: #1aad19;
  color: #fff;
}

.btn.del {
  background: #e64340;
  color: #fff;
}
