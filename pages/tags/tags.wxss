.container.tags text {
  border: 0;
  color: #000;
  font-size: 14px;
  margin-left: 10px;
}

.container.tags input,
.container.tags picker {
  width: 100%;
  color: #9a9a9a;
  text-align: center;
  margin-right: 20px;
}

.container.tags .tagsinfo {
  padding-top: 20px;
  padding-bottom: 40px;
  flex-direction: column;
}

.container.tags .tagsinfo .avatar {
  width: 86px;
  height: 86px;
  margin: 20px;
  display: block;
  overflow: hidden;
  border-radius: 50%;
}

.container.tags .tagsinfo .nickname {
  color: #1b1b1b;
}

.container.tags .logout {
  text-align: center;
  font-size: 14px;
  color: red;
  margin: 20px;
  padding: 12px;
  border-radius: 20px;
  border: 1px solid #efefef;
  background-color: transparent;
}

.container .hover,
.container .button-hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.flex {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-decoration {
  color: #1b1b1b;
  font-size: 14px;
  border-bottom: 1px solid #8d8d8d;
}
