.container.tags {
  padding: 0;
}

.container.tags .head-portrait {
  width: 90vw;
  height: 22vh;
  margin: 0px auto;
}

.container.tags .rows {
  overflow: hidden;
  background-color: #FFF;
  margin: -1px 0;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  margin-bottom: 10px;
}

.container.tags .rows .row .line {
  border-top: 1px solid #efefef;
}

.container.tags .column {
  font-size: 14.5px;
  padding: 14px 0;
  width: 100vw;
  height: 50px;
  box-sizing: border-box;
}

.container.tags .after {
  right: 20px;
  font-size: 14px;
  line-height: 15px;
  position: absolute;
}

.container.tags .after image {
  width: 15px;
  height: 15px;
  margin-left: 3px;
}

